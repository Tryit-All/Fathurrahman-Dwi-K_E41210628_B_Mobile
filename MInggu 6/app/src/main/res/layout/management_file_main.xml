<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="30dp"
    android:paddingHorizontal="30dp"
    tools:context=".ManagementFileMainActivity">

    <EditText
        android:id="@+id/textField"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Text"
        android:textColorHint="@color/black" />

    <Button
        android:onClick="savePrivate"
        android:id="@+id/B_private"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textAllCaps="false"
        android:layout_toEndOf="@+id/textField"
        android:text="Sent Private" />

    <Button
        android:onClick="savePublic"
        android:id="@+id/B_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_private"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/textField"
        android:text="Sent Public"
        android:textAllCaps="false" />

    <Button
        android:onClick="next"
        android:id="@+id/B_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_public"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/textField"
        android:text="To View"
        android:textAllCaps="false" />
</RelativeLayout>