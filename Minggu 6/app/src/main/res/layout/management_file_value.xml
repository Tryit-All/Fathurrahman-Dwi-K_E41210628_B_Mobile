<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="30dp"
    tools:context=".ManagementFileValueActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="scas"
        android:textSize="20dp"/>

    <Button
        android:onClick="getPrivate"
        android:id="@+id/B_private"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textAllCaps="false"
        android:layout_toEndOf="@+id/text_view"
        android:text="Show Private" />

    <Button
        android:onClick="getPublic"
        android:id="@+id/B_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_private"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/text_view"
        android:text="Show Public"
        android:textAllCaps="false" />

    <Button
        android:onClick="back"
        android:id="@+id/B_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_public"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/text_view"
        android:text="To View"
        android:textAllCaps="false" />

</RelativeLayout>